# .env.production
DJANGO_ENV=production

# Django
DJANGO_SECRET_KEY=prod-supersecret-key
DEBUG=False

# Database (Production PostgreSQL settings)
DB_NAME=myprojectdb_prod
DB_USER=myprojectuser
DB_PASSWORD=prodpassword
DB_HOST=prod.db.server
DB_PORT=5432

# Email (SMTP provider details)
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_smtp_username
EMAIL_HOST_PASSWORD=your_smtp_password

# Discourse integration
DISCOURSE_CONNECT_SECRET=prod_discourse_secret
DISCOURSE_API_KEY=prod_discourse_api_key
DISCOURSE_SSO_RETURN_URL=https://your-discourse-instance.com/session/sso_login
DISCOURSE_INSTANCE_URL=https://your-discourse-instance.com

# Django login URL
LOGIN_URL=/accounts/login/
